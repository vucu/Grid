<Window x:Class="Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel 
            Orientation="Horizontal" 
            DockPanel.Dock="Top">
            <Label>Rows:</Label>
            <TextBox Name="rowCountTextBox">10</TextBox>
            <Label>Columns:</Label>
            <TextBox Name="columnCountTextBox">10</TextBox>
            <Button Click="OnResizeButtonClick">Resize</Button>
            <Label>Default value:</Label>
            <TextBox>0</TextBox>
        </StackPanel>
        <DataGrid Name="numberGrid" ItemsSource="{Binding MyList}"  
                  HeadersVisibility="None"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False">
        </DataGrid>
    </DockPanel>
</Window>
